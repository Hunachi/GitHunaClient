<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hunachi.githunaclient">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".presentation.MainApplication"
        android:allowBackup="true"
        android:icon="@drawable/basic_icon_translation"
        android:label="@string/app_name"
        android:roundIcon="@drawable/basic_icon_translation"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.main.MainActivity">

        </activity>
        <activity
            android:name=".presentation.login.LoginGithubActivity"
            android:launchMode="singleTask"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="callback"
                    android:scheme="githuna" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.MainProfileActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>